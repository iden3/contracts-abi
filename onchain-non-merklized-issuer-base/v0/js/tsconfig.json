{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2022",
    "module": "ES2022",
    "lib": ["es2022", "dom"],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "inlineSources": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
  },
  "include": [
    "src/**/*.ts"
  ]
}